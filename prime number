public class PrimeExample{    
 public static void main(String args[]){    
  int no=1038747;
  while(no!=0)
  {
  int rem=no%10;
     prime(rem)
     no=no/10;
  }
  }
  static void prime(int no)
  {
  int count=0;
  for(int i=0;i<=no;i++)
  {
       if(no%i==0)
       count++;
  }
  if(count==2)
  System.out.println(no+"is a prime number");
  else
  System.out.println(no+"is not a prime number")
  }
}    

